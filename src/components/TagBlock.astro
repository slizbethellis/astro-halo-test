---
import { Icon } from "astro-icon/components";
import Link from "./Link.astro";
import TagButtons from "./TagButtons.astro";
---

<div class="flex flex-col m-6">
  <h2 class="text-center text-2xl font-bold">Tags</h2>
  <TagButtons
    listClass="gap-x-1.5 gap-y-4 mt-5 mb-4"
    linkClass="text-sm px-2"
    numTags={29}
  />
  <Link class="self-center text-lg font-semibold" href="/tags">
    all tags<Icon name="iconoir:arrow-right" class="inline-block h-4 w-4 ml-2 mb-1" aria-hidden="true" />
  </Link>
</div>