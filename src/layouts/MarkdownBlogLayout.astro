---
import MainLayout from "./MainLayout.astro";
import { dateOptions } from "../scripts/dateOptions.ts"

const { frontmatter } = Astro.props;
---

<MainLayout pageTitle={`${frontmatter.title} | Blog | Haloroundmyhead Knits`}>
  <main class="justify-self-center max-w-full my-7 md:my-10">
    <article class='flex flex-col prose dark:prose-invert prose-lg prose-phthalo items-center px-6 md:px-24 pb-3 md:pb-6 max-w-full min-[1152px]:max-w-6xl print:prose'>
      <h1 class='text-center'>{frontmatter.title}</h1>
      <span class='text-center text-xl'>{frontmatter.pubDate.toLocaleDateString("en-US", dateOptions)}</span>
      <div class='max-w-full overflow-auto'>
        <p>{frontmatter.description}</p>
        <slot />
      </div>
    </article>
  </main>
</MainLayout>